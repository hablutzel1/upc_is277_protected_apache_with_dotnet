
@{
    ViewBag.Title = "Inicio de Sesión";
}
<div class="text-left">
    <h2>@ViewBag.Title</h2>
    <img src="~/Assets/logoupc.png" alt="Imagen de inicio de sesión" class="img-fluid" style="max-width: 200px; margin-bottom: 20px;" />
</div>
@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <form id="signin-form" class="signup-form validForm">
        <div class="form-group">
            <label class="form-label float-left">Ingrese su usuario</label>
            <input type="text" id="signin-email" class="form-control" placeholder="Usuario" required="" autofocus="" name="username" />
        </div>
        <div class="form-group">
            <label class="form-label float-left">Contraseña</label>
            <input type="password" id="signin-password" class="form-control" placeholder="Contraseña" required="" name="password" />
        </div>
        
        <div class="row mt-3">
            <div class="col-12 text-left">
                <button class="btn btn-lg btn-primary" type="submit">Ingresar</button>
                <br />
                <p class="text-muted">¿No tienes una cuenta? <a href="#" class="text-muted ms-1"><b style="color: red;">Registrarse</b></a></p>
            </div>
        </div>
    </form>
}







